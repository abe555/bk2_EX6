<table class="table">
	<h3>コメント一覧</h3>
	<% @book.book_comments.each do |book_comment| %>
		<tr>
			<td>
				<%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			</td>
			<td><%= book_comment.user.name %></td>
			<td><%= book_comment.comment %></td>

			<% if book_comment.user == current_user %>
			<td>
	            <%= link_to "削除", book_book_comment_path(@book, book_comment), method: :delete, remote: true,class: "btn btn-danger pull-right" %>
	        </td>
	        <% end %>
		</tr>
	<% end %>
</table>